# JOS Infrastructure Environment Variables
# Copy this file to .env and modify as needed

# PostgreSQL Configuration
POSTGRES_DB=jos_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# pgAdmin Configuration
PGADMIN_EMAIL=admin@jos.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=8080

# Application Configuration (for local development)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/jos_dev
REDIS_URL=redis://localhost:6379
PORT=3000
JWT_SECRET=dev-jwt-secret-key-32-chars-long
RUST_LOG=debug
RUST_BACKTRACE=1
