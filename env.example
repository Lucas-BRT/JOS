# JOS (Join Our Session) Environment Configuration
# Copy this file to .env and adjust the values as needed

# =============================================================================
# Database Configuration
# =============================================================================

# Main database URL (PostgreSQL)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/jos_db

# Test database URL (for running tests)
DATABASE_URL_TEST=postgres://postgres:postgres@localhost:5432/jos_test

# =============================================================================
# Server Configuration
# =============================================================================

# Port where the API will listen
PORT=3000

# Host address to bind to (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# =============================================================================
# JWT Configuration
# =============================================================================

# Secret key for JWT token signing (must be at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-should-be-at-least-32-characters-long

# JWT token expiration time (in days)
JWT_EXPIRATION_DAYS=1

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================

# Redis connection URL (for caching and sessions)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARN, ERROR)
RUST_LOG=debug

# Enable backtraces for debugging
RUST_BACKTRACE=1

# =============================================================================
# Environment Settings
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Enable Swagger/OpenAPI documentation
ENABLE_SWAGGER=true

# Enable health check endpoint
ENABLE_HEALTH_CHECK=true

# =============================================================================
# Development Settings
# =============================================================================

# Enable detailed error messages (disable in production)
ENABLE_DETAILED_ERRORS=true

# Enable CORS for development
ENABLE_CORS=true

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Security Settings
# =============================================================================

# Rate limiting (requests per minute per IP)
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Session timeout (in minutes)
SESSION_TIMEOUT_MINUTES=60

# =============================================================================
# Optional: External Services
# =============================================================================

# Email service (if using external email service)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# File storage (if using external storage)
# STORAGE_TYPE=local
# STORAGE_PATH=./uploads
# STORAGE_MAX_FILE_SIZE=10485760  # 10MB in bytes
